{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "es2019"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["components/*"],
            "@/contexts/*": ["contexts/*"],
            "@/hooks/*": ["hooks/*"],
            "@/icons": ["icons/"],
            "@/modules/*": ["modules/*"],
            "@/public/*": ["public/*"],
            "@/utils": ["utils/"],
            "@/utils/*": ["utils/*"]
        }
    },
    "include": [
        "custom-next-env.d.ts",
        "@types/*",
        "**/*.ts",
        "**/*.tsx",
        ".eslintrc.js",
        "postcss.config.js",
        "next.config.js"
    ],
    "exclude": ["node_modules", "next-env.d.ts"]
}
