{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/hooks": ["hooks/"],
      "@/icons": ["icons/"],
      "@/modules/*": ["modules/*"],
      "@/public/*": ["public/*"],
      "@/styles/*": ["styles/*"],
      "@/theme/*": ["theme/*"],
      "@/theme-kit/*": ["theme-kit/*"],
      "@/utils": ["utils/"],
    },
    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
    "custom-next-env.d.ts",
    "@types/*",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "*.config.js",
    "playwright.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "_pages",
    "node_modules",
    "next-env.d.ts"
  ]
}
